<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_card_top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@drawable/bg_main_card_top">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--최대 200 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130dp"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                app:layout_constraintTop_toBottomOf="@id/btn_sound"
                app:layout_constraintBottom_toTopOf="@id/btn_visible1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textColor="@android:color/black"
                    android:text="The plot thickens"/>

            </LinearLayout>

            <!--<me.grantland.widget.AutofitTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_130dp"
                app:layout_constraintTop_toBottomOf="@id/btn_sound"
                app:layout_constraintBottom_toTopOf="@id/btn_visible1"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:textSize="28sp"
                autofit:minTextSize="14sp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:maxLines="7"
                android:text="Android TextView allows text to be displayed in Android applications. This tip will show you how to create a scrollable TextView in Android. ScrollView is not required to allow TextView to scroll."/>
-->
            <ImageButton
                android:id="@+id/btn_sound"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:src="@drawable/ic_main_sound" />

            <ImageButton
                android:id="@+id/btn_more"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_20dp"
                android:src="@drawable/ic_main_more" />

            <ImageButton
                android:id="@+id/btn_visible1"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:src="@drawable/sel_btn_visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="@dimen/dimen_15dp"
                android:background="@android:color/transparent"/>


        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_card_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_main_card_bottom"
        app:layout_constraintTop_toBottomOf="@id/ll_card_top">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--최대 200 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                android:layout_marginLeft="@dimen/dimen_40dp"
                android:layout_marginRight="@dimen/dimen_40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dimen_40dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"
                    android:text="사정이 더 복잡해 지고 있다." />

            </LinearLayout>

            <!--<me.grantland.widget.AutofitTextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="@dimen/dimen_80dp"-->
                <!--android:layout_marginLeft="@dimen/dimen_30dp"-->
                <!--android:layout_marginRight="@dimen/dimen_30dp"-->
                <!--android:layout_marginTop="@dimen/dimen_15dp"-->
                <!--android:textSize="16sp"-->
                <!--autofit:minTextSize="14sp"-->
                <!--android:gravity="center"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:maxLines="4"-->
                <!--app:layout_constraintTop_toTopOf="parent"-->
                <!--android:text="우리가 언제나 그랬듯이 이번주도 열심히 헤쳐 나가자."/>-->

            <Button
                android:layout_width="@dimen/dimen_70dp"
                android:layout_height="@dimen/dimen_35dp"
                android:background="@drawable/btn_main"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:text="@string/str_memorize"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_13.5sp"
                android:paddingBottom="@dimen/dimen_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

            <ImageButton
                android:id="@+id/btn_visible2"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/sel_btn_visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginBottom="@dimen/dimen_40dp" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>



    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@drawable/bg_main_card">-->

